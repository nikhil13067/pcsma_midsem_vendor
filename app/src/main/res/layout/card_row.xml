<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card">
    <RelativeLayout
        android:layout_height="140dp"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/card_item_name"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Item name"
            android:layout_above="@+id/item_price"
            android:layout_alignStart="@+id/item_price" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:id="@+id/card_tem_image"
            android:src="@drawable/burger"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/card_item_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rs 35"
            android:textSize="15dp"
            android:id="@+id/item_price"
            android:layout_above="@+id/item_time"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="20 Minutes"
            android:textSize="15dp"
            android:id="@+id/item_time"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/item_price" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="38dp"
            android:id="@+id/linearLayout">

            <Button
                style="@style/QuantityPickerButtonStyle"
                android:id = "@+id/button_increment"
                android:text="+" />

            <TextView
                android:id="@+id/quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="0"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                style="@style/QuantityPickerButtonStyle"
                android:id = "@+id/button_decrement"
                android:text="-" />

        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/item_veg"
            android:src="@drawable/veg"
            android:scaleType="fitXY"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_toEndOf="@+id/item_price" />

    </RelativeLayout>

</android.support.v7.widget.CardView>